#timeslider
    placement(auto, 0, 0, 0)
    min-width 220px
    z-index 1036

#timeslider *
    box-sizing border-box

#timeslider .toolbox
    borderRadius(0)
    padding 0

#timeslider .toolbox-inner
    padding 20px
  
#timeslider-content
    margin 0
    min-width 220px

.esriTimeSlider
    width  100%
    z-index  999
    position  relative

.esriTimeSlider .tsTmp
    padding-top 7px
    padding-bottom 20px

.esriTimeSlider .tsPlayButton    
    margin-top 6px

.esriTimeSlider .tsPauseButton
    margin-top 6px

.esriTimeSlider .tsPrevButton
    margin-top 6px

.esriTimeSlider .tsNextButton
    margin-top 6px

.esriTimeSlider .ts
    padding 10px 3px 3px 3px
    margin 3px

.esriTimeSlider .tsTicks
    height 10px
    margin-bottom -5px

.esriTimeSlider .tsLabels
    font-size .7em
    margin-top 5px

.esriTimeSlider table td
    vertical-align top !important

.dijitSliderImageHandleH
    background-color rgb(159,191,0)
    border 1px solid rgb(159,191,0)
    borderRadius(20px)
    height 20px
    left 50%
    top -5px
    vertical-align top
    width 20px

.dijitRuleMark
    border-width 1px
    border-style solid
    border-color rgb(37, 37, 37)
    border-color rgba(242, 242, 242, 0.1)
    height 100%
    position absolute

.dijitRuleContainer
    overflow visible
    position relative

.dijitRuleLabelContainer
    position absolute

.dijitRuleLabelContainerH,
.dijitRuleLabelContainerV
    display inline
    display inline-block
    text-align center

.dijitRuleLabelH,
dijitRuleLabelV
    left -50%
    position relative

.dijitSliderMoveable
    z-index 99
    position absolute !important
    display block
    vertical-align middle

.dijitSliderMoveableH
    right 0

.dijitSliderMoveableV
    right 50%

.dj_a11y div.dijitSliderImageHandle, .dijitSliderImageHandle
    margin 0
    padding 0
    position relative !important
    cursor pointer

.dj_iequirks .dj_a11y .dijitSliderImageHandle
    font-size 0

.dj_ie7 .dijitSliderImageHandle
    overflow hidden
    font-size 75%

.dj_ie7 .dj_a11y .dijitSliderImageHandle
    overflow visible

.dj_a11y .dijitSliderFocused .dijitSliderImageHandle
    border 4px solid #000
    height 8px
    width 8px

.dijitSliderImageHandleV
    top -8px
    right -50%

.dijitSliderBar
    border 0

.dijitSliderBarContainerV,
.dijitSliderBarContainerH
    position relative
    height 100%
    z-index 1

.dijitSliderBarH,
.dijitSliderBarV
    border 0
    height 10px

.dijitSliderProgressBar
    background-color rgb(159,191,0)
    z-index 1

.dijitSliderProgressBarV
    position static !important
    height 0
    vertical-align top
    text-align left

.dj_webkit .dijitSliderProgressBarV
    padding-top 1px

.dijitSliderProgressBarH
    position absolute !important
    width 0
    vertical-align middle
    overflow visible

.dijitSliderRemainingBar
    overflow hidden
    background-color rgb(37,37,37)
    background-color rgba(242,242,242,0.1)
    z-index 1

.dijitSliderRemainingBarV
    height 100%
    text-align left

.dijitSliderRemainingBarH
    width 100% !important

.dijitSliderBumper
    overflow hidden
    z-index 1

.dijitSliderBumperV,
.dijitSliderBumperH
    height 10px
    width 20px

.dijitSliderBottomBumper, .dijitSliderLeftBumper,
.dijitSliderTopBumper, .dijitSliderRightBumper
    background-color rgb(37,37,37)
    background-color rgba(242,242,242,.1)

.dijitSliderDecoration
    text-align center

.dijitSliderDecorationC, .dijitSliderDecorationV
    position relative

.dj_ie6 .dijitSliderV td,
.dj_ie7 .dijitSliderV td
    position static

.dijitSliderDecorationH
    width 100%

.dijitSliderDecorationV
    height 100%

.dijitSliderButton
    font-family monospace
    margin 0
    padding 0
    display block

.dj_a11y .dijitSliderButtonInner
    visibility visible

.dijitSliderButtonContainer
    text-align center
    height 0

.dijitSliderButtonContainer *
    cursor pointer

.dijitSlider .dijitButtonNode
    display block
    padding 0

