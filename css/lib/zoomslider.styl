.esriSimpleSlider
    placement(20px, auto, auto, 20px)
    background-color rgb(16,16,16)
    background-color rgba(16,16,16,0.3)
    borderRadius(3px)
    margin 0
    padding 3px

  
.esriSimpleSlider div
    background-color rgb(16,16,16)
    background-color rgba(16,16,16,0.8)
    borderRadius(3px)
    color rgb(242,242,242)
    cursor pointer
    display block
    font-family $typeSansSerif
    font-size 18px
    font-weight bold
    line-height 18px
    margin 0
    padding 3px 7px 5px
    text-align center

.esriSimpleSlider div:last-child
    margin-top 3px
