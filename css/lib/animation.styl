/**
 * Animate selected page elements with CSS
 */
@-webkit-keyframes markerPulse { 0% {
  opacity 1.0
} 45% {
  opacity .20
} 100% {
  opacity 1.0
}}

@-moz-keyframes markerPulse { 0% {
  opacity 1.0
} 45% {
  opacity .20
} 100% {
  opacity 1.0
}}

#map_graphics_layer circle
  animate-element(3s, infinite, markerPulse)
